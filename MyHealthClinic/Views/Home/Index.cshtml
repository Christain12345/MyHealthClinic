@{
    ViewBag.Title = "Home Page";
}
<section>
    <div class="home-background">
        <picture>
            <source media="(min-width: 1080px)" srcset="/Content/Images/home_background_1080.jpg">
            <source media="(min-width: 720px)" srcset="/Content/Images/home_background_720.jpg">
            <source media="(min-width: 400px)" srcset="/Content/Images/home_background_400.jpg">
            <img src="/Content/Images/home_background_400.jpg" alt="imagealttext" class="home-background">
        </picture>
    </div>
</section>


<div class="row">
    <div class="col-md-4">
        <h2>Our GP</h2>
        <p>
            Our General Practirioners are very experienced and caring doctors, we are very happy to serve you, 
            you can consult questions, get comments, and hope you regain your health as soon as possible.
        </p>
        <p>
            @Html.ActionLink("Find GP", "Index", "GeneralPractitioners", new { }, new { @class = "btn btn-default" })
        </p>
    </div>
    <div class="col-md-4">
        <h2>Booking Info</h2>
        <p>
            Please register the consultation hours according to the available hours of the General Practitioners.
        </p>
        <p>
            @Html.ActionLink("Learn More", "About", new { }, new { @class = "btn btn-default" })
        </p>
    </div>
    <div class="col-md-4">
        <h2>Find Us</h2>
        <p>
            You can find the clinic address by entering the address in the options, and travel mode by navigation.
        </p>
        <p>
            @Html.ActionLink("Get Direction", "Contact", new { }, new { @class = "btn btn-default" })
        </p>
    </div>
</div>